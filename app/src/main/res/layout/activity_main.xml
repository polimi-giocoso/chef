<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/linear_main"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chef Per Un Giorno"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="#ff7db5ff"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_below="@+id/logo">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_gravity="center_vertical">
            <GridView
               android:id="@+id/table"
               android:numColumns="2"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:columnWidth="220dp"
               android:listSelector="#00000000"
               android:gravity="center"
               android:layout_gravity="center_vertical"
               android:stretchMode="spacingWidthUniform"
             />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_below="@+id/logo"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/selected_dish"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/chef"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/action_label"
                android:layout_gravity="center"
                android:text="Ciao"
                android:textSize="23dp"
                android:layout_below="@+id/selected_dish"
                android:layout_centerHorizontal="true" />

            <GridView
                android:id="@+id/ingredients"
                android:layout_width="fill_parent"
                android:numColumns="3"
                android:layout_height="wrap_content"
                android:columnWidth="120dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:stretchMode="spacingWidthUniform"
                android:listSelector="#00000000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/action_label"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
